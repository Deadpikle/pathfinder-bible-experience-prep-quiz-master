{% extends "layouts/main.twig" %}

{% block content %}

<p><a class="btn-flat blue-text waves-effect waves-blue no-uppercase" href="./view-users.php">Back</a></p>

<h2>Delete User</h2>

{% include 'includes/error-message.twig' %}

<div id="delete-user">
    <h4> Are you sure you want to delete the {{ user.type.displayName }} {{ user.username }}? </h4>
    <form method="post">
        {{ csrf('delete-user') | raw }}
        <button class="btn waves-effect waves-light submit red white-text" type="submit" name="action">Delete User</button>
    </form>
</div>

{% endblock %}