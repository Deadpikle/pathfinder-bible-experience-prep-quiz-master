{% extends 'layouts/main.twig' %}

{% block content %}

<p><a class="btn-flat blue-text waves-effect waves-blue no-uppercase" href="{{ app.yurl('/admin/non-blankable-words') }}">Back</a></p>

<h4>{{ isCreating ? 'Create Non-blankable Word' : 'Edit Non-blankable Word' }}</h4>

{% include 'includes/error-message.twig' %}

<div id="create-edit-non-blankable-word">
    <form method="post">
        <div class="row">
            <div class="input-field col s12 m4">
                <input type="text" id="blankable-word" name="blankable-word" value="{{ nonBlankableWord.word }}" required data-length="300"/>
                <label for="blankable-word">Word</label>
            </div>
        </div>
        <button class="btn waves-effect waves-light submit" type="submit" name="action">Save</button>
    </form>
</div>

{% endblock %}