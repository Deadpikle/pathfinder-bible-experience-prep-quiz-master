{% extends "layouts/main.twig" %}

{% block content %}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ app.yurl('/') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ app.yurl('/admin') }}">Admin</a></li>
        <li class="breadcrumb-item"><a href="{{ app.yurl('/admin/non-blankable-words') }}">Non-blankable Words</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete Non-blankable Word</li>
    </ol>
</nav>

<h2>Delete Non-blankable Word</h2>

{% include 'includes/error-message.twig' %}

<div id="delete-non-blankable-word">
    <h4>Are you sure you want to delete the non-blankable word {{ nonBlankableWord.word }}? </h4>
    <form method="post">
        {{ csrf('delete-non-blankable-word') | raw }}
        <button class="btn btn-danger btn-sm" type="submit" name="action"><i class="fas fa-trash-alt"></i> Delete Non-blankable Word</button>
    </form>
</div>

{% endblock %}