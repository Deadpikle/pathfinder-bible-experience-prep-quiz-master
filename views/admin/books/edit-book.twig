{% extends "layouts/main.twig" %}

{% block headers %}

{% include 'includes/scripts/datatables.twig' %}

{% endblock %}

{% block content %}

<p><a class="btn-flat blue-text waves-effect waves-blue no-uppercase" href="{{ app.yurl('/admin/books') }}">Back</a></p>

<h4>Bible Books</h4>

<h5>Edit {{ book.name }} (Book for {{ currentYear.year }} PBE year)</h5>
{% include 'includes/error-message.twig' %}
<form method="post">
    <div class="row mb-0">
        <div class="input-field col s6 m4">
            <input type="text" id="name" name="name" value="{{ book.name }}" placeholder="2 Kings" required data-length="150"/>
            <label for="name">Name</label>
        </div>
        <div class="input-field col s6 m4">
            <input type="number" id="number-chapters" name="number-chapters" placeholder="1" value="{{ book.numberChapters }}" required min="1" max="150"/>
            <label for="number-chapters">Number of Chapters</label>
        </div>
        <div class="input-field col s6 m4">
            <input type="number" id="bible-order" name="bible-order" placeholder="1" value="{{ book.bibleOrder }}" required min="1" max="66"/>
            <label for="number-chapters">Bible Order (Genesis = 1, Exodus = 2, Matthew = 40...)</label>
        </div>
    </div>
    <div class="row mt-0">
        <div class="input-field col s6 m4">
            <button class="inline btn waves-effect waves-light submit" type="submit" name="action">Save</button>
        </div>
    </div>
</form>

{% endblock %}
