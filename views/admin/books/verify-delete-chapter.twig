{% extends "layouts/main.twig" %}

{% block content %}

<p><a class="btn-flat blue-text waves-effect waves-blue no-uppercase" href="{{ app.yurl('/admin/books/' ~ book.bookID ~ '/chapters') }}">Back</a></p>

<h2>Delete Chapter</h2>

{% include 'includes/error-message.twig' %}

<div id="delete-user">
    <h4> Are you sure you want to delete chapter {{ chapter.number }} from the book {{ book.name }}? </h4>
    <form method="post">
        {{ csrf('delete-chapter') | raw }}
        <button class="btn waves-effect waves-light submit red white-text" type="submit" name="action">Delete Chapter</button>
    </form>
</div>

{% endblock %}