{% extends "layouts/main.twig" %}

{% block content %}

<p><a class="btn-flat blue-text waves-effect waves-blue no-uppercase" href="{{ app.yurl('/admin/books/' ~ book.bookID ~ '/chapters/' ~ chapter.chapterID ~ '/verses') }}">Back</a></p>

<h2>Delete Verse</h2>

{% include 'includes/error-message.twig' %}

<div id="delete-user">
    <h4> Are you sure you want to delete verse {{ verse.number }} from {{ book.name }} {{ chapter.number }}? This will also delete any associated questions for this verse, and you cannot undo this action!</h4>
    <form method="post">
        {{ csrf('delete-verse') | raw }}
        <button class="btn waves-effect waves-light submit red white-text" type="submit" name="action">Delete Verse</button>
    </form>
</div>

{% endblock %}