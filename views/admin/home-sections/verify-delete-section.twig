{% extends "layouts/main.twig" %}

{% block content %}

<p><a class="btn-flat blue-text waves-effect waves-blue no-uppercase" href="{{ app.yurl('/admin/home-sections/' ~ conference.conferenceID ~ '/sections') }}">Back</a></p>

<h2>Delete Section</h2>

{% include 'includes/error-message.twig' %}

<div id="delete-line-item">
    <h4>Are you sure you want to delete the section {{ section.name }}?</h4>
    <form method="post">
        {{ csrf('delete-section') | raw }}
        <button class="btn btn-danger btn-sm" type="submit" name="action"><i class="fas fa-trash-alt"></i> Delete Section</button>
    </form>
</div>

{% endblock %}