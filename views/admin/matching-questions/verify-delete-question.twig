{% extends "layouts/main.twig" %}

{% block content %}

<p><a class="btn-flat blue-text waves-effect waves-blue no-uppercase" href="{{ app.yurl('/admin/matching-question-sets/' ~ questionSet.matchingQuestionSetID ~ '/questions') }}">Back</a></p>

<h2>Delete Matching Question</h2>

{% include 'includes/error-message.twig' %}

<div id="delete-club">
    <h4> Are you sure you want to delete the matching question {{ question.question }} (Answer: {{ question.answer }}) in the matching question set {{ questionSet.name }}? </h4>
    <form method="post">
        {{ csrf('delete-matching-question') | raw }}
        <button class="btn waves-effect waves-light submit red white-text" type="submit" name="action">Delete Matching Question</button>
    </form>
</div>

{% endblock %}