{% extends "layouts/main.twig" %}

{% block content %}

<p><a class="btn-flat blue-text waves-effect waves-blue no-uppercase" href="{{ app.yurl('/admin/matching-question-sets') }}">Back</a></p>

<h2>Delete Matching Question Set</h2>

{% include 'includes/error-message.twig' %}

<div id="delete-club">
    <h4> Are you sure you want to delete the matching question set {{ questionSet.name }}? </h4>
    <form method="post">
        {{ csrf('delete-matching-question-set') | raw }}
        <button class="btn btn-danger btn-sm" type="submit" name="action"><i class="fas fa-trash-alt"></i> Delete Matching Question Set</button>
    </form>
</div>

{% endblock %}