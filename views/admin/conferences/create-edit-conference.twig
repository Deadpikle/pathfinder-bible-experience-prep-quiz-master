{% extends 'layouts/main.twig' %}

{% block content %}

<p><a class="btn-flat blue-text waves-effect waves-blue no-uppercase" href="{{ app.yurl('/admin/conferences') }}">Back</a></p>

<h4>{{ isCreating ? 'Create Conference' : 'Edit Conference' }}</h4>

{% include 'includes/error-message.twig' %}

<div id="create-edit-conference">
    <form method="post">
        <div class="row">
            <div class="input-field col s12 m4">
                <input type="text" id="name" name="name" value="{{ conference.name }}" placeholder="Upper Columbia Conference"  
                    required data-length="150"/>
                <label for="name">Conference Name</label>
            </div>
            <div class="input-field col s12 m4">
                <input type="url" id="url" name="url" value="{{ conference.url }}" placeholder="https://uccsda.org" 
                    required data-length="350"/>
                <label for="name">Website URL</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m4">
                <input type="text" id="contact-name" name="contact-name" value="{{ conference.contactName }}" placeholder="First-Name Last-Name" required data-length="150"/>
                <label for="contact-name">Contact Name</label>
            </div>
            <div class="input-field col s12 m4">
                <input type="email" id="contact-email" name="contact-email" value="{{ conference.contactEmail }}" placeholder="person@somewhere.com" required data-length="150"/>
                <label for="contact-name">Contact Email</label>
            </div>
        </div>
        <button class="btn waves-effect waves-light submit" type="submit" name="action">Save</button>
    </form>
</div>

{% endblock %}