{% extends "layouts/main.twig" %}

{% block content %}

<p><a class="btn-flat blue-text waves-effect waves-blue no-uppercase" href="{{ app.yurl('/admin/bible-qna-questions') }}">Back</a></p>

<h2>Delete Bible Q&amp;A Questions</h2>

{% include 'includes/error-message.twig' %}

<div id="delete-bible-qna-questions">
    <h4> Are you sure you want to delete all of the {{ language.getDisplayName() }} Bible Q&amp; questions? </h4>
    <form method="post">
        {{ csrf('delete-language-bible-qna') | raw }}
        <button class="btn waves-effect waves-light submit red white-text" type="submit" name="action">Delete Questions</button>
    </form>
</div>

{% endblock %}