{% extends "layouts/main.twig" %}

{% block content %}

<p><a class="btn-flat blue-text waves-effect waves-blue no-uppercase" href="{{ app.yurl('/admin/clubs') }}">Back</a></p>

<h2>Delete Club</h2>

{% include 'includes/error-message.twig' %}

<div id="delete-club">
    <h4> Are you sure you want to delete the club {{ club.name }}? </h4>
    <form method="post">
        {{ csrf('delete-club') | raw }}
        <button class="btn waves-effect waves-light submit red white-text" type="submit" name="action">Delete Club</button>
    </form>
</div>

{% endblock %}