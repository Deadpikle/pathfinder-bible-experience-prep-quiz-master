{% extends "layouts/bootstrap.twig" %}

{% block content %}
   
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ app.yurl('/') }}">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Settings</li>
    </ol>
</nav>

{% if didUpdate %}
    <p>Settings successfully updated!</p>
{% endif %}

<form method="post">
    <p><b>Adjust Default Quiz/Question Language</b></p>
    <div class="row">
        <div class="form-group col-sm-12 col-md-4">
            <label for="language-select">Filter by language</label>
            <select class="form-control" id="language-select" name="language-select">
                {% for language in languages %}
                    {% set selected = language.languageID == userLanguage.languageID ? 'selected' : '' %}
                    <option value="{{ language.languageID }}" {{ selected }}>{{ language.getDisplayName() }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <button class="btn btn-primary" type="submit" name="action">Save</button>
</form>

{% endblock %}
