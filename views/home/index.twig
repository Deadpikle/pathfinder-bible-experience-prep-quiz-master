{% extends "layouts/main.twig" %}

{% block content %}

<h3>Welcome back, {{ currentUsername() }}!</h3>

{% if app.isGuest %}
    <h4>You are currently browsing the site in guest mode. You will be limited to viewing 100 questions, will not be able to view all questions for all Bible books, and will be unable to add, edit, or delete questions. Non-guests have access to all questions for the current PBE year.</h4>
{% endif %}

<div id="user-links">
    <div class="row">
        <div class="col s12 m4">
            <ul>
                <li class="home-buttons"><a class='btn waves-effect waves-light' href="{{ app.yurl('/questions') }}">Questions</a></li>
                <li class="home-buttons"><a class='btn waves-effect waves-light' href="{{ app.yurl('/quiz/setup') }}">Quiz me!</a></li>
                <li class="home-buttons"><a class='btn waves-effect waves-light' href="{{ app.yurl('/active-clubs') }}">Active Clubs</a></li>
                <li class="home-buttons"><a class='btn waves-effect waves-light' href="{{ app.yurl('/stats') }}">Question Stats</a></li>
                <li class="home-buttons"><a class='btn waves-effect waves-light' href="{{ app.yurl('/study-guides') }}">Study Guides</a></li>
                <li class="home-buttons"><a class='btn waves-effect waves-light' href="{{ app.yurl('/settings') }}">Settings</a></li>
            </ul>
        </div>
        <div class="col s12 m8">
            {% include "includes/home-info-sections.twig" with {'sections': sections, 'isOnAdmin': false, 'selectedConferenceID': webAdminConferenceID(app) } %}
        </div>
    </div>
</div>

